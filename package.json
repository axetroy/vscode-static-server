{
  "name": "vscode-static-server",
  "displayName": "Static server",
  "description": "Serve your static directory",
  "version": "0.3.0",
  "publisher": "axetroy",
  "engines": {
    "vscode": "^1.21.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axetroy/vscode-static-server.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axetroy/vscode-static-server/issues"
  },
  "homepage": "https://github.com/axetroy/vscode-static-server#readme",
  "keywords": [
    "server",
    "serve",
    "static"
  ],
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension",
  "activationEvents": [
    "onCommand:static-server.serve"
  ],
  "contributes": {
    "commands": [
      {
        "command": "static-server.serve",
        "title": "%cmd.static-server.serve%",
        "category": "static-server"
      },
      {
        "command": "static-server.close",
        "title": "%cmd.static-server.close%",
        "category": "static-server",
        "icon": {
          "light": "./resources/light/close.svg",
          "dark": "./resources/dark/close.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "static-server.serve",
          "when": "explorerResourceIsFolder && !staticServerFolderPath",
          "group": "static-server"
        },
        {
          "command": "static-server.close",
          "when": "explorerResourceIsFolder && staticServerFolderPath",
          "group": "static-server"
        }
      ],
      "editor/title": [
        {
          "command": "static-server.close",
          "when": "staticServerFolderPath",
          "group": "navigation@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "static-server.close",
          "when": "staticServerFolderPath",
          "group": "static-server"
        }
      ],
      "commandPalette": [
        {
          "command": "static-server.serve",
          "when": "never"
        },
        {
          "command": "static-server.close",
          "when": "staticServerFolderPath"
        }
      ]
    },
    "configuration": {
      "title": "%ext.config.title%",
      "properties": {
        "static-server.port": {
          "type": "integer",
          "default": 1337,
          "markdownDescription": "%ext.config.port%"
        },
        "static-server.download": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%ext.config.download%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rimraf ./out",
    "compile": "npm run clean && npm run lint && tsc -p ./ && npx @zeit/ncc build out/index.js -o ./dist -e vscode -m && npm run clean && move-cli ./dist ./out",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint -p ./ -c tslint.json",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "publish": "npx vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "@types/open": "^6.0.0",
    "move-cli": "^1.2.1",
    "rimraf": "^2.6.3",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "vscode": "^1.1.30"
  },
  "dependencies": {
    "content-disposition": "^0.5.3",
    "get-port": "^4.2.0",
    "internal-ip": "^4.2.0",
    "static-server": "^2.2.1",
    "vscode-nls-i18n": "^0.1.1"
  }
}
